{
  "chrome": {
    "binary": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome",
    "path": "/tmp/googleChromeIdealistaScraperDetail",
    "cdpPort": 9223,
    "chromiumOptions": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--disable-gpu"
    ]
  },
  "rabbitmq": {
    "host": "localhost",
    "port": 5672
  },
  "scraper": {
    "home": {
      "url": "https://www.idealista.com/",
      "mainSearchArea": "Madrid,Madrid"
    },
    "searchResults": {
      "randomPaginationEveryProcessedUrls": 18
    }
  },
  "images": {
    "downloadFolder": "./output/images"
  },
  "timeouts": {
    "chrome": {
      "cdpreadytimeout": 60000,
      "cdprequesttimeout": 2000,
      "cdppollinterval": 500,
      "browserlaunchretrywaitms": 3600000
    },
    "consumer": {
      "delayafterurlms": 1000,
      "maxurlattempts": 3
    },
    "propertydetailpage": {
      "scrollintervalms": 200,
      "scrollevents": 10,
      "cookieaprovaldialogwaitms": 2000,
      "imagesloadwaitms": 2000,
      "morephotosclickwaitms": 400,
      "premediaexpansionwaitms": 1000
    },
    "mainpage": {
      "expressiontimeout": 30000,
      "expressionpollinterval": 200,
      "searchclickwaitms": 2000
    },
    "searchresults": {
      "backtoresultswaitms": 800,
      "randompaginationclickwaitms": 1200
    }
  }
}
